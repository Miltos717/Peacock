{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        // Reset rootDir to default to make rootDirs take effect
        "rootDir": null,
        "rootDirs": ["../components", "."],
        "types": ["vitest/globals"],
        "module": "Node16",
        "allowImportingTsExtensions": true,
        "target": "ESNext",
        "moduleResolution": "nodenext",
        "moduleDetection": "force"
    },
    "include": ["../components", "**/*.ts"],
    "exclude": []
}
